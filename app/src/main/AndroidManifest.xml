<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.watchtracker">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fab_Bottom_app_bar">
        <activity
            android:name=".view.activity.MovieWatchListItem"
            android:exported="false" />
        <activity
            android:name=".view.activity.SearchMoviesListItem"
            android:exported="false" />
        <activity
            android:name=".view.activity.SearchShowsListItem"
            android:exported="false" />
        <activity
            android:name=".view.activity.SearchPeopleListItem"
            android:exported="false" />
        <activity
            android:name=".view.activity.UpcomingWatchListShowsItem"
            android:exported="false" />
        <activity
            android:name=".view.activity.Messages"
            android:exported="false" />
        <activity
            android:name=".view.activity.MessageItem"
            android:exported="false" />
        <activity
            android:name=".view.activity.MessageSystem"
            android:exported="false" />
        <activity
            android:name=".view.activity.ListsItem"
            android:exported="false" />
        <activity
            android:name=".view.activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="apiKeyValue"
            android:value="%{API_KEY}" />
    </application>

</manifest>