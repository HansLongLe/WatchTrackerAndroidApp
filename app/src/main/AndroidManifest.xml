<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tellyme">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:usesCleartextTraffic="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fab_Bottom_app_bar"
        tools:targetApi="m">
        <activity
            android:name="com.example.tellyme.view.activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tellyme.view.activity.CreateAccountActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tellyme.view.activity.SignInActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tellyme.view.activity.MessagesActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tellyme.view.activity.MessageSystemActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tellyme.view.activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>